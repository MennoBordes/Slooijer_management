<Window x:Class="Slooier_Voorraad_WPF.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slooier_Voorraad_WPF"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Border Padding="3">
        <StackPanel>
            <TextBlock Text="SomeText"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="SomeButton"/>
                <Button Grid.Column="1" Content="SomeButton"/>
                <Button Grid.Column="2" Content="SomeButton"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
